<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id="my" class="spring.di.ex2.Myinfo">
		<constructor-arg value="민희"/>
		<constructor-arg value="22"/>
		<constructor-arg>
			<value>강남구 역삼동 쌍용 교육센터</value>
		</constructor-arg>
	</bean>
	
	<bean id="person" class="spring.di.ex2.Person">
		<!-- Myinfo는 생성자 주입 -->
		<constructor-arg ref="my"></constructor-arg> <!-- 레퍼런스 주입시 ref="id or name" -->
		
		<!-- 학교명은 setter 주입 -->
		<property name="schoolName" value="쌍용고등학교"/>	
	</bean>

</beans>
